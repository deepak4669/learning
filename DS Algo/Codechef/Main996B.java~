import java.util.Scanner;
public class Main996B
{
  public static void main(String[] args)
  {
    Scanner sc=new Scanner(System.in);
    int n=sc.nextInt();
    int[] a=new int[n];
    for(int i=0;i<n;i++)
      a[i]=sc.nextInt();
    int[] p=new int[n];
    int min=0;
    int minValue=1000000000;
    for(int i=0;i<n;i++)
    {
      p[i]=solve(a[i],i);
      if(p[i]<minValue)
      {
        min=i;
        minValue=p[i];
      }
    }
    System.out.println(min+1);
  }
