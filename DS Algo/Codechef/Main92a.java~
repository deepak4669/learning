import java.util.Scanner;
public class Main92a
{
  public static void main(String[] args)
  {
    Scanner sc=new Scanner(System.in);
    int n=sc.nextInt();
    int m=sc.nextInt();
    int ans=0;
    for(int i=1;i<=n;i++)
    {
      m-=i;
      if(m<0)
      {
        ans=(m+i);
        break;
      }
    }
    System.out.println(ans);
  }
}
      
      
                     