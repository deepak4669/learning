import java.util.Scanner;
public class Main476A
{
  public static void main(String[] args)
  {
    Scanner sc=new Scanner(System.in);
    int n=sc.nextInt();
    int m=sc.nextInt();
    if(n<m) System.out.println(-1);
    else
    {
      int min=Math.ciel((double)n/2);
      int i=min;
      for(i=min;i<=n;i++)
      {
        if(i%m==0)
        {
          break;
        }
      }
      if(i!=n) System.out.println(i);
    }
  }
}
          