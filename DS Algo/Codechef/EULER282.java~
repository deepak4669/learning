import java.util.Scanner;
public class EULER282
{
  public static void main(String[] args)
  {
    Scanner sc=new Scanner(System.in);
    int t=sc.nextInt();
    while(t-->0)
    {
      long n=sc.nextInt();
      long x=(n/2);
      long f=1000000007;
      long ans=((12*x*x)%f-(2*x)%f+1)%f;
      System.out.println(ans);
    }
  }
}
      