import java.util.Scanner;
public class Main155A
{
  public static void main(String[] args)
  {
    Scanner sc=new Scanner(System.in);
    int n=sc.nextInt();
    int min=sc.nextInt();
    int max=min;
    int ans=0;
    for(int i=0;i<n-1;i++)
    {
      int val=sc.nextInt();
      if(val>max){
        max=val;
        ans++;
      }
      else if(val<min)
      {
        min=val;
        ans++}
    }
    System.out.println(ans);
  }
}