import java.util.Scanner;
import java.util.Arrays;
public class Main455A
{
  public static void main(String[] args)
  {
    Scanner sc=new Scanner(System.in);
    int n=sc.nextInt();
    for(int i=0;i<n;i++)
      a[i]=sc.nextInt();
    Arrays.sort(a);
    int ans=0;
    for(int i=n-1;i>0;i-=2)
      ans=a[i];
    System.out.println(ans);
  }
}
    